<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.shopec.dao.OrderShippingDao">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="net.shopec.entity.OrderShipping">
	    <result column="id" property="id" />
	    <result column="version" property="version" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_date" property="lastModifiedDate" />
        <result column="address" property="address" />
        <result column="area" property="area" />
        <result column="consignee" property="consignee" />
        <result column="delivery_corp" property="deliveryCorp" />
        <result column="delivery_corp_code" property="deliveryCorpCode" />
        <result column="delivery_corp_url" property="deliveryCorpUrl" />
        <result column="freight" property="freight" />
        <result column="memo" property="memo" />
        <result column="phone" property="phone" />
        <result column="shipping_method" property="shippingMethod" />
        <result column="sn" property="sn" />
        <result column="tracking_no" property="trackingNo" />
        <result column="zip_code" property="zipCode" />
        <association property="order" select="net.shopec.dao.OrderDao.find" column="orders" javaType="net.shopec.entity.Order" fetchType="lazy"/>
        <collection property="orderShippingItems" select="net.shopec.dao.OrderShippingItemDao.findSet" column="{attributeName=order_shipping_id, attributeValue=id}" ofType="net.shopec.entity.OrderShippingItem" fetchType="lazy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, version, created_date, last_modified_date, address, area, consignee, delivery_corp, delivery_corp_code, delivery_corp_url, freight, memo, phone, shipping_method, sn, tracking_no, zip_code, orders, 'order_shipping_id'
    </sql>
	
	<!-- 查找实体对象 -->
	<select id="find" parameterType="java.lang.Long" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`order_shipping` 
		WHERE
			`id` = #{id}
	</select>
	
	<!-- 查找实体对象集合 -->
	<select id="findSet" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`order_shipping`
		WHERE
			${attributeName} = #{attributeValue}
	</select>
	
	<!-- 根据属性查找实体对象 -->
	<select id="findByAttribute" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`order_shipping`
		WHERE
			${attributeName } = #{attributeValue}
	</select>
	
	<!-- 查找最后一条订单发货 -->
	<select id="findLast" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			order_shipping
		WHERE
			orders = #{order.id}
		ORDER BY
			created_date DESC
	</select>
	
	<!-- 保存 -->
	<insert id="save" parameterType="net.shopec.entity.OrderShipping">
    	INSERT INTO order_shipping (
			id ,
			created_date ,
			version ,
			address ,
			area ,
			consignee ,
			delivery_corp ,
			delivery_corp_code ,
			delivery_corp_url ,
			freight ,
			memo ,
			phone ,
			shipping_method ,
			sn ,
			tracking_no ,
			zip_code ,
			orders
		)
		VALUES (
			#{entity.id}, 
			NOW(), 
			0, 
			#{entity.address}, 
			#{entity.area}, 
			#{entity.consignee},
			#{entity.deliveryCorp}, 
			#{entity.deliveryCorpCode}, 
			#{entity.deliveryCorpUrl}, 
			#{entity.freight}, 
			#{entity.memo}, 
			#{entity.phone}, 
			#{entity.shippingMethod}, 
			#{entity.sn}, 
			#{entity.trackingNo}, 
			#{entity.zipCode}, 
			#{entity.order.id}
		)
  	</insert>
</mapper>
